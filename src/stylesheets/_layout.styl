.Container
  margin 0 auto

.Content
  width 100%
  display grid
  grid-template-columns repeat(3, 1fr)
  justify-content stretch
  gap 1px

  &__section
    position relative
    border-radius: 3px
    padding 2rem 3rem
    animation falling 0.3s ease-in-out
    background-color var(--color-bg)
    @media screen and (min-width: 1200px)
      opacity 0.98
      transition all .2s ease
      &:hover
        z-index 1
        // scale 1.02
        opacity 1
        box-shadow 0 2px 5px rgba(#000, 0.1), 0 10px 20px rgba($color-primary, 0.1)

  // Content Styles

  &__accueil
    font-size 1.125em
    p
      font-size 1.125em
  &__bio
    grid-column: span 3
  &__bonus
    grid-column: span 2
  &__pro
    grid-column: span 2
    p
      text-align justify
      line-height 1.4
  &__footer
    display: flex
    flex-flow column
    grid-column span 1
    align-items flex-end
    justify-content flex-end
    text-align right
    font-size 1.25rem

