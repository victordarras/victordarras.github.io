*
  margin 0px
  padding 0px
  text-decoration none
  border none
  &:focus
    outline 1px solid var(--color-primary)
  &:before, &:after, &
    box-sizing border-box

html
  transition all 5s ease
  background var(--color-primary)
  color: var(--font-color)
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  &.konami
    animation colors 5s linear infinite
body
  margin: 2vw auto
  line-height 1.4
  font-family var(--font-family)
  font-weight 400
  color inherit
  opacity 0
  max-width 70rem
  scroll-behavior smooth
  animation fadeIn 0.3s ease-in-out
  animation-delay: 0.2s
  animation-fill-mode forwards

small
  font-size 0.5em
p
  margin 1rem 0

h1,h2, h3, h4, h5, h6
  line-height 1.2
  font-family var(--font-family)
  font-weight 900
  margin 0.75em 0 0.5em
  letter-spacing -0.02em
h1
  margin-top 0
  font-size 2.125em
h2
  font-size 1.75em
h3
  font-size 1.5em
h4
  font-size: 1.25em
h5
  font-size: 1.125em
abbr
  border-bottom 1px dotted var(--font-color)
ul
  margin-bottom 1em
  padding-left: 1.5em
a
  position relative
  color var(--color-primary)
  border-bottom  1px solid transparent
  transition all 0.1s ease-in-out
  &:hover
    text-decoration underline
    background-color var(--color-primary-light)


.highlight
  color var(--color-primary)

.row
  display flex
  flex-flow row wrap
.col
  flex 1 0 0
  min-width 14em

.nowrap
  white-space nowrap

.btn
  display inline-flex
  padding .65em 1em
  font-size .8em
  font-weight bolder
  text-transform uppercase
  line-height 1.2
  border 1px solid
  box-shadow 0 0 0 currentColor
  color #fff
  background var(--color-primary)
  transition all .2s ease
  &:hover
    text-decoration none
    color var(--color-primary)
    background #fff
    transform translate(4px, -4px)
    box-shadow -4px 4px 4px 0 currentColor

.starbox
  // outline 2px solid red
  position absolute
  left 0%
  top 66%
  width 6rem
  height 8rem
  overflow hidden
  translate -100%
  .star
    top 30%
    right -45px

.star
  position absolute
  width 4.5rem
  height 4.5rem
  background transparent url("images/star.png") center / contain
  transition: all .1s cubic-bezier(0.460, 0.305, 0.400, 1.650)
  transform-origin center
  // cursor pointer
  translate -5px -15px
  rotate -25deg
  &.small
    width 2.5rem
    height 2.5rem
  // &:hover
  //   scale 1.5
  //   rotate 25deg
  &.dissapearing
    transition: all .2s ease-out
    scale 4
    rotate 1turn
    opacity 0

