.Content__bio
  @media (min-width: 960px)
    article
      display flex
      gap 1em
    aside
      flex 0 0 16em
  .sub-exp
    border-left 10px solid var(--border-color)
    padding-left 1em
  .where
    font-size 1.125rem
    font-weight bold
  .date
    color var(--color-grey)
  .main
    //.
  .title
    font-size 1.3125rem
    //.
  .context
    font-style italic
  .tags
    display flex
    gap .5em
    list-style none
    padding 0
    margin 0 0 1em
    & > li
      padding .25em .5em
      font-size 0.875em
      font-weight 600
      color var(--color-grey)
      background var(--border-color)
      border-radius 3px

